{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "es2019",
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "./src",
    "resolveJsonModule": true,
	"declaration": true,
	"declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "newLine": "crlf",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
